@model Inu_web_clone.Models.DTO.DtoMember
    <!--모델 단의 Dto 데이터 객체를 가져오기 위해서-->
@{
    ViewData["Title"] = "Edit Member";
}


    <form method="post">
        <!---method: GET 방식의 경우 전송하는 url에 입력한 정보가 담기고,
            별로 바람직한 방식은 아니기에 url에는 정보가 담기지 않는
            POST의 방식을 사용하는 것이 권장 된다.

            이를 통해 form안의 데이터가 각 함수로 전달이 된다.-->
        <table class="table">
            <tr>
                <td>ID</td>
                <td><input type="text" name="id" readonly value="@Model.id" /></td>
            </tr>
            <tr>
                <td>Title</td>
                <td><input type="text" name="title" value="@Model.title" /></td>
            </tr>
            <tr>
                <td>Author</td>
                <td><input type="text" name="author" value="@Model.author" /></td>
            </tr>
            <tr>
                <td>E-Mail</td>
                <td><input type="text" name="e_mail" value="@Model.e_mail" /></td>
            </tr>
            <tr>
                <td>Count</td>
                <td><input type="text" readonly name="cnt" value="@Model.cnt" /></td>
            </tr>
            <tr style="display:none;">
                <td>Date</td>
                <td><input type="text" name="date" value="@Model.date" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="text" name="password" value="@Model.password" /></td>
            </tr>
            <tr>
                <td>Content</td>
                <td><input type="text" name="content" value="@Model.content" /></td>
            </tr>
            <!--nochool 값을 굳이 표현하지 않아도 될 것 같다.-->
            <tr>
                <td>
                    <button class="btn-light" asp-controller="Member" asp-action="UpdateMember">
                        Update
                    </button>
                    <button class="btn-light" asp-controller="Member" asp-action="DeleteMember">
                        Delete
                    </button>
                </td>

            </tr>

        </table>
    </form>